set -o pipefail -e # https://stackoverflow.com/a/34381499/4521950

hmsg="Help message..."
# Show help if no arguments is given
if [[ $1 == "" ]]; then
  echo -e $hmsg
  exit 1
fi

pushd $(cd "`dirname "$0"`"/..; pwd)

# Get command line arguments
while [ "$#" -gt 0 ]; do
  case "$1" in
    "python")
        pytest -vrs --cov .
        popd
        ;;
    "scala")
        sbt test
        ;;
  esac
done
# export OPTION3_HOME=`dirname $( cd "$(dirname "${BASH_SOURCE[0]}")"; pwd -P )`
